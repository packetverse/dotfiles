[init]
    defaultBranch = main

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all

[core]
    compression = 9
    whitespace = error
    preloadindex = true

[url "git@github.com:packetverse/"]
    insteadOf = "packetverse:"

[url "git@github.com:packetverse/"]
    insteadOf = "pv:"

[url "git@github.com:"]
    insteadOf = "gh:"

[include]
    path = ~/.local/git.config

[includeIf "gitdir:~/dev/github.com/packetverse/"]
    path = ~/.gitconfig.personal

[includeIf "gitdir:~/.dotfiles/"]
    path = ~/.gitconfig.personal
